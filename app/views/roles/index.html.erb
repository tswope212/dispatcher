<h1>Team member roles</h1>

<table>
  <tr>
    <th>Person</th>
    <th>Team</th>
    <th>Skill</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<%= paginate @roles %>
<% @roles.each do |role| %>
  <tr class="<%= cycle 'light-gray', 'white' %>">
    <td><%= link_to_name role.person %></td>
    <td><%= link_to_name role.team %></td>
    <td><%= link_to_name role.skill %></td>
    <td><%= link_to 'Show', role %></td>
    <% if current_team_admin %>
      <td><%= link_to 'Edit', edit_role_path(role) %></td>
      <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>
<%= paginate @roles %>
<br />

<%= link_to 'New Role', new_role_path if current_team_admin %>

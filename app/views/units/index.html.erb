<h1>Homes</h1>

<%= form_tag search_units_path, :method => :get do %>
  <%= text_field_tag :query %>
  <%= submit_tag :search %>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<%= paginate @units %>
<% @units.each do |unit| %>
  <tr class="<%= cycle 'light-gray', 'white' %>">
    <td><%= link_to_name unit %></td>
    <td><%= link_to_name unit.address %></td>
    <td>
      <% if unit.resident.present? %>
        <%= link_to_name unit.resident %>
      <% else %>
        <%= link_to 'add resident', new_unit_resident_path(unit) %>
      <% end %>
    </td>
    <td><%= link_to 'Show', unit %></td>
    <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
    <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= paginate @units %>
<br />

<%= link_to 'New Unit', new_unit_path %>
<%= link_to_function 'upload csv', "$('#upload_form').show()" %>
<div id="upload_form">
  <%= form_tag upload_units_path, :multipart => true do %>
    <%= file_field :csv, :data %>
    <%= submit_tag 'Load' %>
  <% end %>
</div>

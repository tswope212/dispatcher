<p>
  <b>Name:</b>
  <%= @unit.name %>
</p>

<p>
  <b>Address:</b>
  <%= @unit.address.name %>
</p>

<% @unit.jobs.each do |job| %>
  <%= div_for job do %>
    <%= link_to_name job %>
    (<%= job.scheduled_start.andand.strftime("%I:%M %p on %A, %b %d") %>)
  <% end %>
<% end %>

<%= link_to 'add phase of tasks', phase_unit_path(@unit) %>

<%= gmaps(:markers => {:data => @unit.address.to_gmaps4rails}, :map_options => {:auto_zoom => false, :zoom => 14, :detect_location => true}) %>


<%= link_to 'Edit', edit_unit_path(@unit) %> |
<%= link_to 'Back', units_path %>

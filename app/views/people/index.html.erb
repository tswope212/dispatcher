<h1>Registered Dispatchees</h1>

<table>
  <tr>
    <th><%= link_to 'First', :order => :complete, :direction => (params[:direction] == 'reverse' ? 'forward' : 'reverse') %>/
    <%= link_to 'Last', :order => :complete, :direction => (params[:direction] == 'reverse' ? 'forward' : 'reverse') %></th>
    <th><%= link_to 'Phone #', :order => :complete, :direction => (params[:direction] == 'reverse' ? 'forward' : 'reverse') %></th>
    <th><%= link_to 'Email', :order => :complete, :direction => (params[:direction] == 'reverse' ? 'forward' : 'reverse') %></th>
  </tr>
<%= paginate @people %>
<% @people.each do |person| %>
  <tr class="<%= cycle('light-gray', 'white') %>">
    <td><%= link_to_name person %></td>
    <td><%= person.primary_phone_number %></td>
    <td><%= mail_to person.email %></td>
    <td><%= link_to 'remove', person_path(person), :method => :delete, :confirm => "Ready to remove #{person.first_name}?" %></td>
  </tr>
<% end %>
</table>
<%= paginate @people %>


<h1>Neighborhoods</h1>
<%= link_to 'New Neighborhood', new_neighborhood_path if current_team_admin, :method => :get, :class => 'right new_button'  %>

<table>
  <tr>
    <th>Name</th>
    <th>City</th>
    <th>Centers</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<%= paginate @neighborhoods %>
<% @neighborhoods.each do |neighborhood| %>
  <tr class="<%= cycle('light-gray', 'white') %>">
    <td><%= link_to_name neighborhood %></td>
    <td><%= neighborhood.city.andand.name %></td>
		<td><%= link_to pluralize(neighborhood.operations_centers.count, 'center'), neighborhood_operations_centers_path(neighborhood) %></td>
    <% if current_team_admin %>
      <td><%= link_to 'Edit', edit_neighborhood_path(neighborhood) %></td>
      <td><%= link_to 'Destroy', neighborhood, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>
<%= paginate @neighborhoods %>
<br />


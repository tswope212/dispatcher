<h1>Listing notes</h1>
<%= button_to 'New Note', new_note_path, :method => :get, :class => 'right new_button' %>

<table>
  <tr>
    <th>Text</th>
    <th>Image</th>
    <th>Job</th>
    <th>Category</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<%= paginate @notes %>
<% @notes.each do |note| %>
  <tr>
    <td><%= note.text %></td>
    <td><%= image_tag note.image, :width => 150 if note.image.present? %></td>
    <td><%= link_to_name note.job %></td>
    <td><%= link_to_name note.category %></td>
    <td><%= link_to 'Show', note %></td>
    <td><%= link_to 'Edit', edit_note_path(note) %></td>
    <td><%= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= paginate @notes %>
<br />


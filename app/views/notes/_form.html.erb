<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :text %><br />
    <%= f.text_area :text, :size => '40x4' %>
  </div>
  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>
  <div class="field">
    <%= f.label :job_id %><br />
    <%= f.select :job_id, options_from_collection_for_select(Job.all, :id, :name, @note.job_id) %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br />
    <%= f.select :category_id, options_from_collection_for_select(Category.alphabetical, :id, :name, @note.category_id), :include_blank => true %>
  </div>
  <div class="field">
    <%= label :category, 'Or Write Category Here' %>
    <%= text_field_tag :category %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

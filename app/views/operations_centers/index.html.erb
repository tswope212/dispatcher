<h1>Operations Centers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Unit</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @operations_centers.each do |operations_center| %>
  <tr>
    <td><%= link_to_name operations_center %></td>
    <td><%= operations_center.description %></td>
    <td><%= operations_center.unit.full_address %></td>
    <% if current_team_admin %>
      <td><%= link_to 'Edit', edit_operations_center_path(operations_center) %></td>
      <td><%= link_to 'Destroy', operations_center, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Operations center', new_operations_center_path if current_team_admin %>

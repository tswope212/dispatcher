<%= form_for(@coordination) do |f| %>
  <% if @coordination.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@coordination.errors.count, "error") %> prohibited this coordination from being saved:</h2>

      <ul>
      <% @coordination.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :operations_center_id %><br />
    <%= f.select :operations_center_id, options_from_collection_for_select(OperationsCenter.alphabetical, :id, :name, @coordination.operations_center_id), :include_blank => true %>
  </div>
  <div class="field">
    <%= f.label :coordinator_id %><br />
    <%= f.select :coordinator_id, options_from_collection_for_select(Coordinator.alphabetical_by_first_name, :id, :name, @coordination.coordinator_id), :include_blank => true %>
  </div>
  <div class="actions">
    <%= f.submit 'Assign/Grant Access' %>
  </div>
<% end %>

<h1>Listing tasks</h1>
<%= link_to 'New Task', new_task_path, :method => :get, :class => 'right new_button' %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<%= paginate @tasks %>
<% @tasks.each do |task| %>
  <tr class="<%= cycle 'light-gray', 'white' %>">
    <td><%= task.name %></td>
    <td><%= task.description %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
<%= paginate @tasks %>
<br />


<h1>Editing resident</h1>

<%= render 'form' %>

<%= link_to 'Show', @resident %> |
<%= link_to 'Back', residents_path %>

<ul>
  <% @resident.languages.each do |language| %>
    <li><%= language.name %></li>
  <% end %>
  <li>
    <%= form_for @resident.proficiencies.new do |f| %>
      <%= f.select :language_id, options_from_collection_for_select(Language.all, :id, :name), :include_blank => true %>
      <%= f.submit :add %>
      <%= f.hidden_field :speaker_type %>
      <%= f.hidden_field :speaker_id %>
    <% end %>
  </li>
</ul>